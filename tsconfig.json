{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "noEmit": true,

    /** ---------------------------------------------
     * Modules
     * ----------------------------------------------- */

    "module": "esnext",
    "moduleResolution": "node",

    /** ---------------------------------------------
     * JavaScript Support
     * ----------------------------------------------- */

    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /** ---------------------------------------------
     * Type Checking
     * ----------------------------------------------- */

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /** ---------------------------------------------
     * Completeness
     * ----------------------------------------------- */

    "skipLibCheck": true
  },

  /** ---------------------------------------------
   * Scope
   * ----------------------------------------------- */

  "exclude": ["**/*/public", "./packages/boondoggle-docs"],

  "include": [
    ".eslintrc.js",
    "**/*/gatsby-browser.ts",
    "**/*/gatsby-config.ts",
    "**/*/gatsby-node.ts",
    "**/*/gatsby-ssr.ts",
    "**/*/plugins/**/*",
    "**/*/src/**/*",
    "global.d.ts",
    "jest.config.ts",
    // "packages/**/*",
    "test/**/*"
  ]
}
